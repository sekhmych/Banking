<Page x:Class="Olump2018.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Olump2018"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Height="450" Width="800"
      Title="LoginPage"
      Background="AliceBlue">

    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="358" Stroke="Black" VerticalAlignment="Center" Width="292"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"><Run Language="ru-ru" Text="Авторизация"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="285,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16"><Run Language="ru-ru" Text="Логин"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="285,264,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Text="Пароль"/>
        <TextBox x:Name="TextBoxLogin" HorizontalAlignment="Center" Margin="0,190,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="240" Height="28"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center" Margin="0,290,0,0" VerticalAlignment="Top" Width="240" Height="28" />
        <Button x:Name="BtnLogin" Content="Вход" HorizontalAlignment="Center" Margin="0,359,0,0" VerticalAlignment="Top" Width="240" Height="25" Background="#FF53A4FF" Foreground="White" Click="BtnLogin_Click"/>

    </Grid>
</Page>
