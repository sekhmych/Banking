<UserControl x:Class="Olump2018.CreditPages.UserControls.CreditElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Olump2018.CreditPages.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="180"
             Height="300" Width="180"
             Background="#FF99CFFF">
    <Grid>
        <Button Click="Button_Click" x:Name="BtnCalculations" Content="Рассчитать кредит" HorizontalAlignment="Center" Margin="0,257,0,0" VerticalAlignment="Top" Width="168" Height="25" Background="#FF0A73FF" Foreground="White" />
        <TextBlock HorizontalAlignment="Center" Text="{Binding Title}" Margin="0,24,0,0" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="56" Width="168" FontSize="18"></TextBlock>
        <TextBlock HorizontalAlignment="Center" Margin="0,111,0,0" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="56" Width="168" FontSize="14"><Run Language="ru-ru" Text="Минимальный срок"/><LineBreak/><Run Language="ru-ru" Text="{Binding Period}"/></TextBlock>
        <TextBlock HorizontalAlignment="Center" Text="{Binding Bet}" Margin="0,217,0,0" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="35" Width="168" FontSize="18" FontWeight="Bold"></TextBlock>
    </Grid>
</UserControl>
