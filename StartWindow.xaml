<Page x:Class="Olump2018.StartWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Olump2018"
      mc:Ignorable="d" 
      Height="450" Width="800"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartWindow"
      Background="AliceBlue">

    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22" Text="Добро пожаловать"/>
        <Button x:Name="BtnCredits" Click="BtnCredits_Click" Content="Кредиты" Background="#FF22A4E8" HorizontalAlignment="Center" Margin="0,192,0,0" VerticalAlignment="Top" Width="270" Height="33"/>
        <Button x:Name="BtDeposits" Click="BtnDeposits_Click" Content="Вклады" Background="#FF22A4E8" HorizontalAlignment="Center" Margin="0,255,0,0" VerticalAlignment="Top" Width="270" Height="33"/>
        <Button x:Name="BtnLogin" Click="BtnLogin_Click" Content="Вход" Background="#FF22A4E8" HorizontalAlignment="Center" Margin="0,322,0,0" VerticalAlignment="Top" Width="270" Height="33"/>

    </Grid>
</Page>
