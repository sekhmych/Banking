<Window x:Class="Olump2018.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Olump2018"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="900"
        Background="AliceBlue">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="192*"/>
        </Grid.RowDefinitions>
        <Frame x:Name="MainFrame" Content="Billy" Grid.Row="1" NavigationUIVisibility="Hidden" Source="/StartWindow.xaml" Navigated="Frame_Navigated"/>
        <Button x:Name="BtnBack" Click="BtnBack_Click" Content="Назад" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="30" Width="60" Background="#FF71FF00"/>
        <Image Grid.Row="0" HorizontalAlignment="Left" Height="44" Margin="811,10,0,0" VerticalAlignment="Top" Width="44" Source="/Resources/icon1.png"/>
        <TextBlock Grid.Row="0" HorizontalAlignment="Left" Margin="573,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="#FF003E90" FontStyle="Italic" FontSize="20" Width="233"><Run Language="ru-ru" Text="Деньги в каждый карман"/></TextBlock>


    </Grid>
</Window>
